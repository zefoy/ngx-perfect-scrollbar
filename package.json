{
  "name": "angular2-perfect-scrollbar",
  "description": "Angular 2 wrapper library for perfect scrollbar",
  "bugs": "https://github.com/zefoy/angular2-perfect-scrollbar/issues",
  "license": "MIT",
  "version": "0.9.0",
  "main": "./lib/index.js",
  "typings": "./lib/src/index.d.ts",
  "files": [
    "lib"
  ],
  "tslint": {
    "extends": "./tslint.json"
  },
  "stylelint": {
    "extends": "./stylelint.json"
  },
  "scripts": {
    "deploy": "npm publish",
    "clean": "rm -rf lib node_modules",
    "build": "rm -rf lib && webpack --config config/webpack.config.js",
    "start": "echo \"Building the library\" && rm -rf lib && npm run build",
    "lint": "tslint 'src/**/*.ts' ; stylelint 'src/**/*.scss' --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zefoy/angular2-perfect-scrollbar.git"
  },
  "dependencies": {
    "perfect-scrollbar": "^0.6.12"
  },
  "devDependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/http": "2.0.0",
    "@types/core-js": "^0.9.32",
    "@types/node": "^6.0.45",
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "^2.2.0",
    "core-js": "^2.4.0",
    "raw-loader": "^0.5.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "stylelint": "7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "tslint": "3.15.0",
    "typescript": "^2.0.0",
    "webpack": "^2.1.0-beta.25",
    "zone.js": "^0.6.25"
  }
}
